<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/phoneyellow"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SettingsProfile">

    <ImageButton
        android:id="@+id/bear_button"
        android:layout_width="109dp"
        android:layout_height="160dp"
        android:background="@drawable/bear"
        app:layout_constraintBottom_toTopOf="@+id/owl_button"
        app:layout_constraintEnd_toStartOf="@+id/rabbit_button"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toEndOf="@+id/horse_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.949" />

    <ImageButton
        android:id="@+id/horse_button"
        android:layout_width="113dp"
        android:layout_height="136dp"
        android:layout_marginStart="48dp"
        android:adjustViewBounds="true"
        android:background="@drawable/horse"
        app:layout_constraintBottom_toTopOf="@+id/sheep_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.94" />

    <ImageButton
        android:id="@+id/owl_button"
        android:layout_width="118dp"
        android:layout_height="126dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="228dp"
        android:adjustViewBounds="true"
        android:background="@drawable/owl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sheep_button" />

    <ImageButton
        android:id="@+id/rabbit_button"
        android:layout_width="108dp"
        android:layout_height="145dp"
        android:layout_marginEnd="12dp"
        android:adjustViewBounds="true"
        android:background="@drawable/rabbit"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="218dp" />

    <ImageButton
        android:id="@+id/sheep_button"
        android:layout_width="112dp"
        android:layout_height="140dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="236dp"
        android:adjustViewBounds="true"
        android:background="@drawable/sheep"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/bird_button"
        android:layout_width="125dp"
        android:layout_height="123dp"
        android:adjustViewBounds="true"
        android:background="@drawable/bird"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toEndOf="@+id/owl_button"
        app:layout_constraintTop_toBottomOf="@+id/rabbit_button"
        app:layout_constraintVertical_bias="0.024" />

</androidx.constraintlayout.widget.ConstraintLayout>
