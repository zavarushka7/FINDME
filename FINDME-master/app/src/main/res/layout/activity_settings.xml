<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/phoneyellow"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Settings">


    <ImageButton
        android:id="@+id/change_button"
        android:layout_width="310dp"
        android:layout_height="130dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bigredbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/volume_button"
        app:layout_constraintStart_toStartOf="@+id/volume_button"
        app:layout_constraintTop_toBottomOf="@+id/volume_button"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_button"
        android:textColor="@color/yellow"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/change_button"
        app:layout_constraintEnd_toEndOf="@+id/change_button"
        app:layout_constraintStart_toStartOf="@+id/change_button"
        app:layout_constraintTop_toTopOf="@+id/change_button"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/volume_button"
        android:layout_width="230dp"
        android:layout_height="100dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/smallredbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.324"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textvolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/volume_button"
        android:textColor="@color/yellow"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/volume_button"
        app:layout_constraintEnd_toEndOf="@+id/volume_button"
        app:layout_constraintStart_toStartOf="@+id/volume_button"
        app:layout_constraintTop_toTopOf="@+id/volume_button"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/animation_button"
        android:layout_width="275dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/middleredbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/change_button"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="@+id/change_button"
        app:layout_constraintTop_toBottomOf="@+id/change_button"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textanimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/animation_button"
        android:textColor="@color/yellow"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/animation_button"
        app:layout_constraintEnd_toEndOf="@+id/animation_button"
        app:layout_constraintStart_toStartOf="@+id/animation_button"
        app:layout_constraintTop_toTopOf="@+id/animation_button"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>